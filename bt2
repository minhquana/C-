#include <iostream>
#include <string>

int main() {
    //Khai báo biến
    std::string hoTen;
    std::string ngaySinh;
    std::string ngheNghiep;
    std::string moTa;

    //Nhập dữ liệu
    std::cout << "Nhập họ và tên: " << std::endl;
    std::getline(std::cin, hoTen);
    std::cout << "Nhập ngày sinh: " << std::endl;
    std::getline(std::cin, ngaySinh);
    std::cout << "Nhập nghề nghiệp: " << std::endl;
    std::getline(std::cin, ngheNghiep);
    std::cout << "Nhập mô tả: " << std::endl;
    std::getline(std::cin, moTa);

    //Xuất dữ liệu
    std::cout << "thông tin cá nhân " << std::endl;
    std::cout << "Họ và tên: " << hoTen << std::endl;
    std::cout << "Ngày sinh: " << ngaySinh << std::endl;
    std::cout << "Nghề nghiệp: " << ngheNghiep << std::endl;
    std::cout << "Mô tả: " << moTa << std::endl;

    return 0;
}
